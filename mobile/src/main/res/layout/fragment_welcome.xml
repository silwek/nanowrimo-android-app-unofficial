<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_header"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Je suis Wrimo Companion,\nvotre partenaire d\'Ã©criture." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Que voulez-vous faire ?" />

        <Button
            android:id="@+id/bt_campnano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Je veux participer au Camp Nanowrimo 2015"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="left"
            android:drawableRight="@drawable/ic_send"/>

        <Button
            android:id="@+id/bt_nano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Je veux participer au Nanowrimo 2015"
            android:textColor="@color/wrimo_color_secondary_dark"
            android:textSize="20sp"
            android:gravity="left"
            android:drawableRight="@drawable/ic_send_disabled" />
    </LinearLayout>
</ScrollView>