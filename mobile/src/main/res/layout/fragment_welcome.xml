<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="48dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="48dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/drawer_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_question"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_next_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/ic_send"
            android:gravity="left"
            android:text="@string/welcome_choice_next_event"
            android:textColor="@color/welcome_button_text_active"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/bt_nano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/ic_send"
            android:gravity="left"
            android:text="@string/welcome_choice_nano"
            android:textColor="@color/welcome_button_text_active"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/bt_campnano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/ic_send"
            android:gravity="left"
            android:text="@string/welcome_choice_camp"
            android:textColor="@color/welcome_button_text_active"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>