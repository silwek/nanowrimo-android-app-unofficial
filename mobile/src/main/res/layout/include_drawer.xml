<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/wrimo_color_secondary">

        <ImageView
            android:id="@+id/drawer_decor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="fitEnd"
            android:src="@drawable/drawer_header_nanowrimo" />

        <TextView
            android:id="@+id/drawer_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lines="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/drawer_session_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/drawer_user_name"
            android:ellipsize="end"
            android:lines="2"
            android:paddingBottom="16dp"

            android:paddingLeft="16dp"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/wrimo_color_secondary_dark" />

    <Button
        android:id="@+id/bt_update_wordcount"
        style="@style/Drawer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_new"
        android:text="@string/dialog_update_wordcount" />

    <Button
        android:id="@+id/bt_follow"
        style="@style/Drawer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_important"
        android:text="@string/dialog_add_user_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/wrimo_color_light_grey" />

    <Button
        android:id="@+id/bt_playstore"
        style="@style/Drawer_item_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_playstore" />

</LinearLayout>