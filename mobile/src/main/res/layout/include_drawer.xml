<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/wrimo_color_secondary">

        <ImageView
            android:id="@+id/drawer_decor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/drawer_header_campnano"
            android:scaleType="fitEnd"/>

        <TextView
            android:id="@+id/drawer_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/drawer_session_name"
            android:layout_below="@+id/drawer_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:ellipsize="end"
            android:lines="2"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/wrimo_color_secondary_dark"/>

    <Button
        android:id="@+id/bt_follow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/dialog_add_user_title"
        android:gravity="left|center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_action_important"
        android:drawablePadding="8dp"
        android:textColor="@color/wrimo_color_dark_text"
        android:paddingLeft="16dp"
        android:textSize="16sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Créer une session personnalisé (à venir)"
        android:gravity="left|center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_action_important"
        android:drawablePadding="8dp"
        android:textColor="#aaaaaa"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="1dp"
        android:background="@color/wrimo_color_dark_text"/>

    <Button
        android:id="@+id/bt_playstore"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/menu_playstore"
        android:gravity="left|center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/wrimo_color_dark_text"
        android:paddingLeft="32dp"
        android:textSize="14sp"/>

</LinearLayout>