<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="_Wrimo">
        <!-- Customize your theme here. -->
        <item name="android:toolbarStyle">@style/MyActionBar</item>

        <item name="colorPrimary">@color/wrimo_color</item>
        <item name="colorPrimaryDark">@color/wrimo_color_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorAccent">@color/wrimo_color_secondary</item>
        <item name="android:statusBarColor">@color/wrimo_color_dark</item>

    </style>


    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/wrimo_color</item>

        <item name="colorPrimary">@color/wrimo_color</item>
        <item name="colorPrimaryDark">@color/wrimo_color_dark</item>
        <item name="colorAccent">@color/wrimo_color_secondary</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>