<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="_Wrimo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="colorPrimary">@color/wrimo_color</item>
        <item name="colorPrimaryDark">@color/wrimo_color_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorAccent">@color/wrimo_color_secondary</item>

    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/wrimo_color</item>

        <item name="colorPrimary">@color/wrimo_color</item>
        <item name="colorPrimaryDark">@color/wrimo_color_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

</resources>
